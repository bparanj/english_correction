<div class="container">
  <%= form_tag do |f| %>
    <div class='col-sm-2'><strong>Content: </strong></div><br/>
    <br/>

    <textarea name="text[content]" id="text_content" class="col-sm-10 ui-corner-all"  rows='10'></textarea>
    <% 11.times { %> <br/><% } %>

    <div style="float: left;">
      <button type="button" id='btn_correct' class="btn btn-info btn-sm" >
        <span class="glyphicon  glyphicon-pencil" aria-hidden="true"></span>
        <strong>Correct</strong>
      </buton>
    </div>
  <% end %>

  <% 5.times { %> <br/><% } %>
  <div id='request_error' class="hidden"></div>
  <strong>Corrected Text with deltas:</strong><br/>
  <div id='result' class="row"></div>
  <% 2.times { %> <br/><% } %>
  <strong>Corrected Text:</strong><br/>
  <div id='result_text' class="row"></div>
</div>
