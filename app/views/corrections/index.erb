<div class="container">
  <%= form_tag do |f| %>
    <div class='col-sm-2'><strong>Content: </strong></div><br/><br/>

    <%= text_area_tag(:text_content, nil, rows: 10, class: 'col-sm-10 ui-corner-all') %>
    <% 11.times { %> <br/><% } %>

    <div style="float: left;">
      <%= button_tag(type: :button, id: 'btn_correct', class: "btn btn-info btn-sm") do %>
        <span class="glyphicon  glyphicon-pencil" aria-hidden="true"></span>
        <strong>Correct</strong>
      <% end %>
    </div>

  <% end %>

  <% 5.times { %> <br/><% } %>
  <div id='request_error' class="hidden"></div>
  <strong>Corrected Text with deltas:</strong><br/>
  <div id='result' class="row"></div><br/><br/>
  <strong>Corrected Text:</strong><br/>
  <div id='result_text' class="row"></div>
</div>
